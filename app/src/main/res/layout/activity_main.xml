<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/green"
    >

    <TextView
        android:id="@+id/text_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:layout_marginTop="20dp"
        android:text="Register"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_arrow_exit"
        app:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        />
    <EditText
        android:id="@+id/edit_text_1"
        android:layout_width="350dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_main"
        android:layout_marginTop="80dp"
        android:text="Username"
        android:textColor="@color/white"
        android:background="@color/light_green"
        android:paddingLeft="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trivia"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/edit_text_1"
        app:layout_constraintStart_toStartOf="@+id/edit_text_1"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_1"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        />
    <EditText
        android:id="@+id/edit_text_2"
        android:layout_width="350dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_1"
        android:layout_marginTop="5dp"
        android:text="Email"
        android:textColor="@color/white"
        android:background="@color/light_green"
        android:paddingLeft="30dp"
        />
    <EditText
        android:id="@+id/edit_text_3"
        android:layout_width="350dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_2"
        android:layout_marginTop="5dp"
        android:text="Password"
        android:textColor="@color/white"
        android:background="@color/light_green"
        android:paddingLeft="30dp"
        />
    <Button
        android:id="@+id/btn_next"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:text="NEXT"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        />

    <ImageView
        android:id="@+id/ic_next"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:tint="@color/green"
        android:src="@drawable/ic_next"
        app:layout_constraintTop_toTopOf="@+id/btn_next"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        />

    <ImageView
        android:id="@+id/img_owl"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="90dp"
        android:src="@drawable/img_bird"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trivia"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/img_owl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="35sp"
        android:layout_marginTop="30dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>